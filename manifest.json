{
  "manifest_version": 3,
  "name": "Git Repo Bookmarker",
  "version": "1.0",
  "description": "Bookmark and search GitHub, GitLab, and Bitbucket repositories",
  "permissions": ["storage", "tabs", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://github.com/*",
    "https://gitlab.com/*",
    "https://bitbucket.org/*"
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}